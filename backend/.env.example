# .env.example
# Copy this file to .env and update with your credentials

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# MongoDB Atlas (REQUIRED)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/resume_builder?retryWrites=true&w=majority

# JWT Authentication (REQUIRED)
JWT_SECRET=change-this-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=43200

# ============================================
# STORAGE CONFIGURATION
# ============================================

# Option 1: AWS S3 (Production)
USE_LOCAL_STORAGE=false
S3_BUCKET=resume-builder-storage
S3_ACCESS_KEY=your-aws-access-key
S3_SECRET_KEY=your-aws-secret-key
S3_REGION=us-west-2

# Option 2: Local Storage (Development)
# USE_LOCAL_STORAGE=true
# LOCAL_STORAGE_PATH=./storage

# ============================================
# AI ENHANCEMENT (OPTIONAL)
# ============================================

# OpenRouter for LLM (optional, required for AI enhancement)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
LLM_MODEL=meta-llama/llama-3.3-70b-instruct
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# OpenAI for embeddings (optional, required for RAG)
OPENAI_API_KEY=sk-your-openai-key
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# PDF GENERATION
# ============================================

PDF_ENGINE=playwright
PDF_UPLOAD_TO_S3=true
PDF_PAGE_FORMAT=A4

# ============================================
# OBSERVABILITY (OPTIONAL)
# ============================================

LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# ============================================
# APPLICATION SETTINGS
# ============================================

APP_NAME=Resume Builder
APP_VERSION=2.0.0
DEBUG=false
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
